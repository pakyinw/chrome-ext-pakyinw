{
    "manifest_version": 2,
  
    "name": "chrome-ext-pakyinw",
    "description": "Chrome extension developed by pakyinw for self-use",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "contextMenus",
      "tabs"
    ],
    "background": {  
        "scripts": ["event.js"],    
        "persistent": true  
    },  
    "icons": { "16": "icon.png" }, 
  }