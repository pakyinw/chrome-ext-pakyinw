{
    "manifest_version": 2,
  
    "name": "chrome-ext-pakyinw",
    "description": "Chrome extension developed by pakyinw for self-use",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "contextMenus",
      "tabs",
      "activeTab",
      "declarativeContent"
    ],
    "background": {  
        "scripts": ["event.js"],    
        "persistent": true  
    },  
    "icons": { "16": "icon.png" }, 
    "commands": {  
      "chinese-translation": {  
        "suggested_key": {  
          "default": "Ctrl+B",
          "mac": "Command+B"
        },  
        "description": "Search Chinese Translation"  
      }
    }
  }