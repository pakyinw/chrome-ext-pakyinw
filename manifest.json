{
    "manifest_version": 2,
  
    "name": "chrome-ext-pakyinw",
    "description": "Chrome extension developed by pakyinw for self-use",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "contextMenus",
      "tabs",
      "activeTab",
      "declarativeContent",
      "storage"
    ],
    "background": {  
        "scripts": ["event.js","global_event.js"],    
        "persistent": true  
    },  
    "icons": { "16": "icon.png" }, 
    "commands": {  
      "germanToChinese": {  
        "suggested_key": {  
          "default": "Ctrl+B",
          "mac": "Command+B"
        },  
        "description": "German-Chinese"  
      },
      "englishToChinese": {  
        "suggested_key": {  
          "default": "Ctrl+U",
          "mac": "Command+U"
        },  
        "description": "English-Chinese"  
      },
      "japaneseToChinese": {  
        "suggested_key": {  
          "default": "Ctrl+I",
          "mac": "Command+I"
        },  
        "description": "Japanese-Chinese"  
      },
      "computer": {  
        "suggested_key": {  
          "default": "Ctrl+K",
          "mac": "Command+K"
        },  
        "description": "Computer"  
      }
    }
  }